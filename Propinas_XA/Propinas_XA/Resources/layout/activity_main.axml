<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:shrinkColumns="0,1">
		<TextView
				android:text="Xamarin.Android Propinas Ruben Martinez:"
				android:gravity="center"
				android:layout_width="match_parent"
				android:layout_height="50.0dp"			
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/txtVwNombre" 
			/>
		<TableRow>
			<TextView
				android:text="Subtotal:"
				android:gravity="right"
				android:layout_width="191.5dp"
				android:layout_height="50.0dp"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/txtVwSubtotal" 
			/>
			<EditText
				android:id="@+id/edtxtSubtotal"
				android:layout_width="192.0dp"
				android:hint="Subtotal"
				android:imeOptions="actionGo"
				android:inputType="text"
				android:layout_height="50.0dp" 
			/>
		</TableRow>
		<TableRow>
			<TextView
				android:text="Total (Post-Tax):"
				android:gravity="right"
				android:layout_width="191.5dp"
				android:layout_height="50.0dp"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/txtVwTotalPostTax" 
			/>
			<EditText
				android:id="@+id/edtxtTotalPostTax"
				android:layout_width="192.0dp"
				android:hint="Receipt Total"
				android:imeOptions="actionGo"
				android:inputType="text"
				android:layout_height="50.0dp" 
			/>
		</TableRow>
		<TableRow>
			<TextView
				android:text="Tip Percent:"
				android:gravity="right"
				android:layout_width="191.5dp"
				android:layout_height="50.0dp"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/txtVwTipPercent" 
			/>
			<EditText
				android:id="@+id/edtxtTipPercent"
				android:layout_width="192.0dp"
				android:hint="Tip Percent"
				android:imeOptions="actionGo"
				android:inputType="text"
				android:layout_height="50.0dp" 
			/>
		</TableRow>
		<TableRow>
			<SeekBar
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/slider"
				android:progress="15"
				android:max="100"
				android:layout_span="2"
			/>
		</TableRow>
		<TableRow>
			<TextView
				android:text="Tip Value:"
				android:gravity="right"
				android:layout_width="191.5dp"
				android:layout_height="50.0dp"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/txtVwTipValue" 
			/>
			<EditText
				android:id="@+id/edtxtTipValue"
				android:layout_width="192.0dp"
				android:hint="Tip Value"
				android:imeOptions="actionGo"
				android:inputType="text"
				android:layout_height="50.0dp" 
			/>
		</TableRow>
		<TableRow>
			<TextView
				android:text="Total:"
				android:gravity="right"
				android:layout_width="191.5dp"
				android:layout_height="50.0dp"
				android:minWidth="25px"
				android:minHeight="25px"
				android:id="@+id/txtVwTotal" 
			/>
			<EditText
				android:id="@+id/edtxtTotal"
				android:layout_width="192.0dp"
				android:hint="Total"
				android:imeOptions="actionGo"
				android:inputType="text"
				android:layout_height="50.0dp" 
			/>
		</TableRow>
	</TableLayout>
</ScrollView>